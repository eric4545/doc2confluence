{
  "name": "doc2confluence",
  "version": "1.0.0",
  "description": "Convert documentation files (Markdown, AsciiDoc, CSV) to Confluence ADF format",
  "main": "dist/index.js",
  "bin": {
    "doc2conf": "dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eric4545/doc2confluence.git"
  },
  "homepage": "https://github.com/eric4545/doc2confluence",
  "bugs": {
    "url": "https://github.com/eric4545/doc2confluence/issues"
  },
  "keywords": [
    "confluence",
    "markdown",
    "asciidoc",
    "csv",
    "documentation",
    "adf",
    "atlassian"
  ],
  "author": "Eric Ng",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "watch": "tsc -w",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --apply",
    "format": "biome format . --write",
    "check": "biome check --apply .",
    "ci": "biome ci .",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@atlaskit/adf-schema": "^20.0.0",
    "@atlaskit/adf-utils": "^13.0.0",
    "@atlaskit/editor-common": "^63.0.0",
    "@atlaskit/editor-json-transformer": "^8.8.0",
    "ajv": "^8.12.0",
    "asciidoctor": "^2.2.6",
    "commander": "^11.1.0",
    "csv-parse": "^5.5.3",
    "dompurify": "^3.0.6",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.0",
    "gray-matter": "^4.0.3",
    "jsdom": "^23.0.1",
    "marked": "^11.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/ajv": "^1.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/dotenv": "^8.2.0",
    "@types/form-data": "^2.5.0",
    "@types/jest": "^29.5.10",
    "@types/jsdom": "^21.1.6",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  },
  "engines": {
    "node": ">=18"
  }
}
